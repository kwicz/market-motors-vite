# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://placeholder:placeholder@placeholder:5432/placeholder

# Authentication & Security
JWT_SECRET=your-ultra-secure-jwt-secret-minimum-64-characters-for-production-change-this
JWT_REFRESH_SECRET=your-ultra-secure-refresh-secret-minimum-64-characters-for-production-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-ultra-secure-session-secret-minimum-64-characters-for-production-change-this

# CORS Configuration - UPDATE THIS WITH YOUR FRONTEND RAILWAY URL
CORS_ORIGIN=https://your-frontend.up.railway.app
CORS_CREDENTIALS=true

# Application Configuration
APP_URL=https://your-backend.up.railway.app
API_URL=https://your-backend.up.railway.app

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/app/logs

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_IMAGE_OPTIMIZATION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Production Optimization
COMPRESSION_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp 