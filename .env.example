# Environment Configuration
NODE_ENV=development
PORT=3000
VITE_PORT=5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/market_motors
DB_HOST=localhost
DB_PORT=5432
DB_NAME=market_motors
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-at-least-32-characters-long
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Email Configuration (for password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@marketmotors.com

# Error Tracking & Monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/123456
VITE_ENABLE_SENTRY=false
SENTRY_DSN=https://your-backend-sentry-dsn@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# Application Configuration
VITE_APP_NAME=Market Motors
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=http://localhost:3000/api
APP_URL=http://localhost:5173
API_URL=http://localhost:3000

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Development Tools
VITE_ENABLE_DEVTOOLS=true
ENABLE_API_DOCS=true
ENABLE_QUERY_LOGGING=true

# Feature Flags
ENABLE_REDIS_CACHE=false
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_LAZY_LOADING=true
ENABLE_PWA=false

# Third-party Services
GOOGLE_ANALYTICS_ID=
GOOGLE_MAPS_API_KEY=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Production Optimization
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=31536000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000
